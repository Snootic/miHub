{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "mihub",
  "version": "0.0.1",
  "identifier": "com.snootic.mihub",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "plugins": {
    "updater": {
      "pubkey":"dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEZGNTlBMEY5RjkxRDM0NzEKUldSeE5CMzUrYUJaLzVsVnFudTM3VW9seW00cG92NGF0RWROSnROOFlFZzhzMUxWSDhnZVlmVzMK",
      "endpoints": [
        "https://github.com/snootic/mihub/releases/latest/download/latest.json"
      ] 
    }
  },

  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
       "label": "main",
        "title": "MiHub",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
